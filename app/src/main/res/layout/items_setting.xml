<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dimens_220px"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layoutDirection="ltr">

    <ImageView
        android:id="@+id/image"
        android:layout_width= "@dimen/dimen_100_px"
        android:layout_height="@dimen/dimen_100_px"
        android:clipToPadding="false"
        android:foregroundGravity="center"
        android:overScrollMode="never"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@drawable/notifications">
    </ImageView>

    <TextView
        android:id="@+id/grand_titre"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/image"
        app:layout_constraintBottom_toTopOf="@id/petit_titre"
        app:layout_constraintRight_toLeftOf="@id/image"
        android:layout_marginRight="@dimen/dimens_45px"
        android:text="الاشعارات"
        android:gravity="center"
        android:textColor="@color/color_text_login_and_cadre"
        android:textSize="@dimen/dimens_55px"
        android:textStyle="bold"
        />
    <TextView
        android:id="@+id/petit_titre"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/grand_titre"
        app:layout_constraintBottom_toBottomOf="@id/image"
        app:layout_constraintRight_toLeftOf="@id/image"
        android:layout_marginRight="@dimen/dimens_45px"
        android:text="الاشعارات"
        android:gravity="center"
        android:textColor="@color/color_text_petit"
        android:textSize="@dimen/dimens_45px"
        android:textStyle="bold"
        />
    <Button
        android:background="#00272727"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/view_clique"
        />



</androidx.constraintlayout.widget.ConstraintLayout>